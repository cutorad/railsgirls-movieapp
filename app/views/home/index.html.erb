<header class=page-header>
  <h1>
    My movies
    <small>Updated every movie night</small>
  </h1>
</header>

<% @movies.each do |movie| %>
<article class="movie clearfix">
  <img src="http://placekitten.com/g/92/138">

  <h2><%= movie.title %> (<%= movie.year %>)</h2>

  <% if movie.runtime.present? %>
  <span class=runtime>
    <%= display_duration movie.runtime %>
  </span>
  <% end %>

  <p class=rating>
    <%= display_rating movie.rating %>
  </p>

  <% if movie.note.present? %>
  <div class="note well well-small">
    <%= simple_format movie.note %>
  </div>
  <% end %>
</article>
<% end %>

<hr>

<p class=muted>
  Total time spent watching:
  <strong><%= display_duration @total_runtime %></strong>
</p>
